<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="citic.cgb.task.mapper.busi.Bb11_data_taskMapper">

	<select id="selectBb11_data_taskByVo" parameterType="citic.cgb.task.domain.Bb11_data_task" resultType="citic.cgb.task.domain.Bb11_data_task">
		select
		task_id,task_date,task_date_time,task_status,remark
		from bb11_data_task
		<where>
			<if test="task_id != null  and task_id != '' ">
				task_id = #{task_id}
			</if>
			<if test="task_status != null  and task_status != '' ">
				and task_status = #{task_status}
			</if>
		</where>
	</select>

	<update id="updateStatusByID" parameterType="String">
		update bb11_data_task set task_status = '0'
		where task_id = #{_parameter}
	</update>

</mapper> 
