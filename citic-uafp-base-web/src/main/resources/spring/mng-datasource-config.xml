	<!-- mybatis 配置文件 -->
	<!-- 基本jdbc执行器 -->
	<bean id="mngJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="mngDataSource" />
		<qualifier value="mng" />
	</bean>

	<bean id="mngSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="mngDataSource" />
		<property name="configLocation" value="classpath:mybatis/mng-mybatis-config.xml" />
		<property name="mapperLocations" value="classpath*:citic/**/mng/*.xml" />
	</bean>


	<bean id="mngSqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="mngSqlSessionFactory" />
	</bean>


	<bean id="mngDao" class="citic.base.BaseDao">
		<property name="sqlSessionTemplate"  ref="mngSqlSession"></property>
		<qualifier value="mng"></qualifier>
	</bean>

	<!-- 应用程序配置文件 -->
	<bean id="mngSqlActuator" class="citic.das.utils.SqlActuator">
		<property name="dataSource" ref="mngDataSource" />
	</bean>

	<bean id="mngDbMetaInfo" class="citic.das.base.DefaultDbMetaInfo">
		<property name="dataSource" ref="mngDataSource" />
	</bean>

	<bean id="mngTableParse" class="citic.das.oracle.OracleTableParse">
		<property name="appSqlParse" ref="oracleSqlParse" />
		<property name="dbMetaInfo" ref="mngDbMetaInfo" />
	</bean>

	<bean id="mngAppExec" class="citic.das.base.BaseAppSqlExec">
		<property name="appSqlParse" ref="oracleSqlParse" />
		<property name="sqlActuator" ref="mngSqlActuator" />
		<qualifier value="mng" />
	</bean>

	<bean id="mngTableOper" class="citic.das.base.BaseTableOper">
		<property name="appSqlParse" ref="oracleSqlParse" />
		<property name="tableParse" ref="mngTableParse" />
		<property name="sqlActuator" ref="mngSqlActuator" />
		<qualifier value="mng" />
	</bean>


	<!-- 事务管理器 -->
	<bean id="mngTransactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="mngDataSource" />
	</bean>

</beans>