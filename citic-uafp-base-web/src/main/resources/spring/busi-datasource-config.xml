	<!-- mybatis 配置文件 -->
	<!-- 基本jdbc执行器 -->
	<bean id="busiJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="busiDataSource" />
		<qualifier value="busi" />
	</bean>

	<bean id="busiSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="busiDataSource" />
		<property name="configLocation" value="classpath:mybatis/busi-mybatis-config.xml" />
		<property name="mapperLocations" value="classpath*:citic/**/busi/*.xml" />
	</bean>

	<bean id="busiSqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="busiSqlSessionFactory" />
	</bean>

	<bean id="busiDao" class="citic.base.BaseDao">
		<property name="sqlSessionTemplate" ref="busiSqlSession"></property>
		<qualifier value="busi"></qualifier>
	</bean>

	<!-- 应用程序配置文件 -->
	<bean id="busiSqlActuator" class="citic.das.utils.SqlActuator">
		<property name="dataSource" ref="busiDataSource" />
	</bean>

	<bean id="busiDbMetaInfo" class="citic.das.oracle.OracleMetaInfo">
		<property name="dataSource" ref="busiDataSource" />
	</bean>

    <bean id="busiTableParse" class="citic.das.oracle.OracleTableParse">
		<property name="appSqlParse" ref="oracleSqlParse" />
		<property name="dbMetaInfo" ref="busiDbMetaInfo" />
	</bean>
	
	<bean id="busiAppExec" class="citic.das.base.BaseAppSqlExec">
		<property name="appSqlParse" ref="oracleSqlParse" />
		<property name="sqlActuator" ref="busiSqlActuator" />
		<qualifier value="busi" />
	</bean>

	<bean id="busiTableOper" class="citic.das.base.BaseTableOper">
		<property name="appSqlParse" ref="oracleSqlParse" />
		<property name="tableParse" ref="busiTableParse" />
		<property name="sqlActuator" ref="busiSqlActuator" />
		<qualifier value="busi" />
	</bean>


	<!-- 事务管理器 -->
	<bean id="busiTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="busiDataSource" />
	</bean>

</beans>